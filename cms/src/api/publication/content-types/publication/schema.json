{
  "kind": "collectionType",
  "collectionName": "publications",
  "info": {
    "singularName": "publication",
    "pluralName": "publications",
    "displayName": "Publication",
    "description": "Academic publications and papers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "authors": {
      "type": "string",
      "required": true
    },
    "venue": {
      "type": "string",
      "required": true
    },
    "year": {
      "type": "integer",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Journal Article",
        "Conference Paper",
        "Policy Report",
        "White Paper",
        "Working Paper"
      ],
      "required": true
    },
    "abstract": {
      "type": "text",
      "required": true
    },
    "link": {
      "type": "string"
    }
  }
}
